{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Session Schema v1 (Pilot)",
  "description": "Schema for read-only session subgraph + route",
  "type": "object",
  "required": [
    "session_id",
    "title",
    "created_at",
    "updated_at",
    "subgraph",
    "route",
    "artifacts"
  ],
  "properties": {
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "subgraph": {
      "type": "object",
      "required": [
        "nodes",
        "edges"
      ],
      "properties": {
        "nodes": {
          "type": "array",
          "minItems": 1,
          "maxItems": 128,
          "items": {
            "$ref": "#/$defs/node"
          }
        },
        "edges": {
          "type": "array",
          "minItems": 0,
          "maxItems": 256,
          "items": {
            "$ref": "#/$defs/edge"
          }
        }
      },
      "additionalProperties": false
    },
    "route": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 0,
      "maxItems": 64,
      "items": {
        "$ref": "#/$defs/artifact"
      }
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "required": [
        "id",
        "type",
        "title"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string"
        },
        "refs": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": false
    },
    "edge": {
      "type": "object",
      "required": [
        "id",
        "from",
        "to",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "from": {
          "type": "string",
          "minLength": 1
        },
        "to": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "artifact": {
      "type": "object",
      "required": [
        "id",
        "type",
        "title",
        "provenance"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "refs": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "provenance": {
          "type": "object",
          "required": [
            "source_ref",
            "generated_at"
          ],
          "properties": {
            "source_ref": {
              "type": "string",
              "minLength": 1
            },
            "generated_at": {
              "type": "string",
              "format": "date-time"
            },
            "model": {
              "type": "string"
            },
            "prompt_version": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
