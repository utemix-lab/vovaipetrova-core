from duckduckgo_search import ddg_images
import requests
import os

# –ü–∞–ø–∫–∞ –¥–ª—è –∏–∫–æ–Ω–æ–∫
output_folder = "/opt/knowledge-base/DU/–ò–ö–û–ù–ö–ò"
os.makedirs(output_folder, exist_ok=True)

# –¢–≤–æ–∏ –Ω–µ–π—Ä–æ—Å–µ—Ç–∏ –∏ —Å–µ—Ä–≤–∏—Å—ã
names = ["Midjourney", "RunwayML", "Stability.ai", "ChatGPT", "Whisper"]

for name in names:
    query = f"{name} logo PNG transparent"
    print(f"üîç –ò—â—É –¥–ª—è: {name}")
    results = ddg_images(query, max_results=1)

    if results:
        img_url = results[0]["image"]
        ext = os.path.splitext(img_url)[-1]
        if len(ext) > 5 or not ext:
            ext = ".png"
        filename = f"{name.replace('.', '_')}{ext}"
        img_path = os.path.join(output_folder, filename)

        response = requests.get(img_url)
        with open(img_path, "wb") as f:
            f.write(response.content)
        print(f"‚úÖ –°–∫–∞—á–∞–ª: {img_path}")
    else:
        print(f"‚ö† –ù–µ –Ω–∞—à—ë–ª –¥–ª—è: {name}")

print("üöÄ –í—Å–µ –∫–∞—Ä—Ç–∏–Ω–∫–∏ –æ–±—Ä–∞–±–æ—Ç–∞–Ω—ã.")
