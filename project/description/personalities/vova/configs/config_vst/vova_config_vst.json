{
  "agent": "vova",
  "version": "1.0",
  "task": "vst_documentation",
  "description": "Автоматизированная система создания страниц VST-инструментов для базы знаний",
  
  "input": {
    "producers_list": "project/description/personalities/vova/configs/config_vst/vst_producers_list.txt",
    "format": "text_file",
    "description": "Список производителей VST (название, страна, URL)"
  },
  
  "output": {
    "directory": "project/data/music/vst/",
    "format": "markdown",
    "encoding": "utf-8",
    "naming": "[Название инструмента].md",
    "draft_directory": "project/sort/vova/vst/"
  },
  
  "structure": {
    "frontmatter": {
      "required_fields": [
        "Title",
        "Manufacturer",
        "Category",
        "Tags"
      ],
      "optional_fields": [
        "Formats",
        "Platforms",
        "Homepage",
        "Price"
      ],
      "strict": true,
      "format": "yaml"
    },
    "html_visual_block": {
      "enabled": true,
      "components": [
        "cover_image (16:9, кликабельна, ведёт на официальное демо)",
        "logo_manufacturer (PNG прозрачный, до 50px высотой, кликабелен)",
        "country_flag (PNG, до 50px высотой, кликабелен)"
      ],
      "strict": true
    },
    "description": {
      "source": "official_website",
      "processing": "llm_optional",
      "style": "clean, professional, no emojis",
      "formatting": ["####", "-", "**Word**", "---"],
      "strict": false
    },
    "vova_comment": {
      "enabled": true,
      "html_block": true,
      "avatar_dynamic": true,
      "avatar_path": "images/vova-avatars/",
      "style": "witty, professional, based on user reviews",
      "length": "3 sentences",
      "strict": true
    },
    "offers_section": {
      "enabled": true,
      "recipients": [
        "Tag_Master",
        "Nay",
        "Vova",
        "Structure"
      ],
      "strict": false
    }
  },
  
  "tags": {
    "database": "project/description/personalities/vova/configs/config_vst/tags_db.json",
    "validation": true,
    "format": "#Tag_Example",
    "rules": [
      "Только через #",
      "Слова с большой буквы",
      "Два и более слов через _",
      "Сначала производитель, потом характеристики"
    ],
    "validation_agent": "Tag_Master"
  },
  
  "images": {
    "covers": {
      "path": "images/vst-covers/",
      "format": "JPG",
      "aspect_ratio": "16:9",
      "fallback": "cover.jpg"
    },
    "logos": {
      "path": "images/vst-logos/",
      "format": "PNG",
      "naming": "[manufacturer].png",
      "fallback": "logo.png"
    },
    "flags": {
      "path": "images/flags/",
      "format": "PNG",
      "naming": "[country].png"
    },
    "vova_avatars": {
      "path": "images/vova-avatars/",
      "format": "PNG",
      "emotions": [
        "vova-classic.png",
        "vova-idea.png",
        "vova-skeptic.png",
        "vova-warning.png",
        "vova-like.png"
      ]
    }
  },
  
  "llm": {
    "provider": "configurable",
    "models": {
      "description_processing": "optional",
      "tag_generation": "required",
      "vova_comment": "required",
      "offers_generation": "optional"
    },
    "fallback": "rule_based"
  },
  
  "workflow": {
    "steps": [
      "1. Читать producers_list.txt",
      "2. Для каждого производителя: парсить сайт",
      "3. Извлечь список инструментов",
      "4. Для каждого инструмента: создать .md файл",
      "5. Сохранить в draft_directory",
      "6. Опционально: валидация"
    ],
    "mode": "batch",
    "parallel": false
  },
  
  "exportability": {
    "platform_independent": true,
    "config_driven": true,
    "future_proof": "ready for local LLM, n8n, server deployment"
  }
}
